---
// src/components/Icon.astro
const { name } = Astro.props;

// Importar todos los SVG de la carpeta assets/icons
const icons = import.meta.glob('../assets/icons/*.svg', {
  query: '?raw',
  import: 'default',
  eager: true,
});

// Obtener la ruta del icono
const iconPath = `../assets/icons/${name}.svg`;

// Obtener el contenido del icono
const iconContent = icons[iconPath];
---

{iconContent && <Fragment set:html={iconContent} />}
